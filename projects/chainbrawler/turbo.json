{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "artifacts/**", "cache/**", "typechain-types/**"],
      "env": ["HARDHAT_VAR_DEPLOYER_MNEMONIC", "HARDHAT_VAR_*"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "lint:fix": {
      "cache": false
    },
    "check": {
      "cache": false
    },
    "check:fix": {
      "cache": false
    },
    "lint:solidity": {
      "cache": false
    },
    "lint:solidity:fix": {
      "cache": false
    },
    "format:solidity": {
      "cache": false
    },
    "format:solidity:check": {
      "cache": false
    },
    "check:solidity": {
      "cache": false
    },
    "check:solidity:fix": {
      "cache": false
    }
  }
}
