{
  "name": "@chainbrawler/utils",
  "version": "0.1.0",
  "description": "Utility tools and orchestrators for ChainBrawler repository maintenance",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "chainbrawler-dev": "./dist/scripts/dev-orchestrator.js",
    "chainbrawler-test": "./dist/scripts/test-runner.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage --run",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@chainbrawler/core": "workspace:*",
    "@xcfx/node": "^0.6.0",
    "bip32": "^4.0.0",
    "bip39": "^3.0.4",
    "cive": "^0.8.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "tiny-secp256k1": "^2.2.1",
    "viem": "^2.37.5"
  },
  "devDependencies": {
    "@types/node": "^20.19.14",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "license": "Apache-2.0"
}
