# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ownership-nft

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Conflux Network Configuration
CONFLUX_RPC_URL=https://evm.confluxrpc.com
CONFLUX_PRIVATE_KEY=your-private-key-for-deployment

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_GENERAL=100
RATE_LIMIT_STRICT=10
RATE_LIMIT_UPLOAD=20
RATE_LIMIT_VERIFICATION=50
RATE_LIMIT_PAIRING=5

# Cache Configuration
CACHE_TTL=600

# API Keys (if needed for external services)
IPFS_PROJECT_ID=your-ipfs-project-id
IPFS_PROJECT_SECRET=your-ipfs-project-secret